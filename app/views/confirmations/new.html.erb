<div class="container">

  <%= form_for @user, :url => {:controller => 'confirmations', :action => 'update'} do |f| %>

  <%= f.label "Verification Code" %>
  <%= f.password_field :verification_code %>

  <%= f.label "New Password" %>
  <%= f.password_field :password %>

  <%= f.submit %>

  <% end %>

</div>
