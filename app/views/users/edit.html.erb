<div class="container">
  <div class="row">
    <div class="form col-md-4 col-md-offset-4">
      <h1>Update account:</h1>
      <%= form_for @user do |f| %>
        Name:
        <%= f.text_field :name %>
        Username:
        <%= f.text_field :username %>
        Email:
        <%= f.text_field :email %>
        Location:
        <%= f.text_field :location %>
        Phone number:
        <%= f.text_field :phone %>

        <%= render partial: "roles" %>

        To change password:
        <%= f.submit "Send me a verification code!", class: "btn btn-primary" %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
