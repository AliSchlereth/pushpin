<div class="main-card">
  <div class="container">
    <p><%= link_to "Back to the full Professional Index", professionals_path, class: "text-center col-md-4 col-md-offset-4" %></p>
    <% if @skill %>
    <p> <%= link_to "Back to all #{@skill.name}'s", skills_search_path(skill: {skill_id: @skill}), class: "text-center col-md-4 col-md-offset-4" %> </p>
    <% end %>
    <div class="col-md-6 col-md-offset-3">
      <div class="profile-card text-center">
        <div class="image-and-rating">
          <%= image_tag(@professional.image, class: "profile-img") %>
          <span class="rating"><%= octicon "star" %><%= @professional.average_rating %></span>
        </div>
        <div class="profile-header-block">
          <h3 class="profile-name"><%= @professional.name %></h3>
          <p><%= @professional.location %></p>
          <div class="profile-skills">
            <% @professional.skills.each do |skill| %>
            <%=link_to skill.name, skills_search_path(skill: {skill_id: skill.id}), class: "skill-tag" %>
          <% end %>
          </div>
        </div>
      </div>
      <div class="profile-contact col-md-6 col-md-offset-3 text-center">
        <p>Contact this pro:<p>
        <p><%= @professional.email %><p/>
        <p><%= @professional.phone %><p/>
      </div>
    </div>
  </div>
</div>
<div class="secondary-card">
</div>
