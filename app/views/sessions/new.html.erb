<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <h1>Login</h1>
    <%= form_tag '/login' do %>
      Email:
      <%= text_field_tag :email %>
      Password:
      <%= password_field_tag :password %>
      <%= submit_tag "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
